    <style name="SubcardBottomButton" style="?android:attr/buttonStyleSmall"
           parent="@android:style/Widget.Button"
        >
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- TOILET VIEW -->

    <style name="toiletTableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/toilet_layout_out_margin</item>
        <item name="android:paddingRight">@dimen/toilet_layout_out_margin</item>
        <item name="android:paddingTop">@dimen/toilet_layout_out_margin</item>
    </style>

    <style name="toiletSquare">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/toilet_free_bg</item>
        <item name="android:layout_marginBottom">@dimen/toilet_layout_out_margin</item>
    </style>

    <style name="toiletSquareLeft" parent="toiletSquare">
        <item name="android:layout_marginRight">@dimen/toilet_layout_in_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">4dp</item>
    </style>

    <style name="toiletSquareRight" parent="toiletSquare">
        <item name="android:layout_marginLeft">@dimen/toilet_layout_in_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">4dp</item>
    </style>

    <style name="toiletLabelImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="toiletGenderImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/toilet_label_gender_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
