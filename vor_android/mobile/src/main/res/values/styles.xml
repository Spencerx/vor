<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/light_grey_text</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/light_grey_drawer_item_selected</item>
        <!--<item name="android:buttonStyle">@style/SubcardBottomButton</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionBarTabStyle">
        <item name="android:height">48dp</item>
    </style>

    <style name="BaseText"
           parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="BaseTextFillWidth"
           parent="BaseText">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NotificationText"
           parent="BaseText">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ChatText"
           parent="BaseTextFillWidth">
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TopicText"
           parent="BaseTextFillWidth">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopicTitle"
           parent="BaseTextFillWidth">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardText">
        <item name="android:layout_height">wrap_content</item>
        parent="BaseTextFillWidth">
    </style>

    <style name="CardTitle"
           parent="BaseTextFillWidth">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToastText"
           parent="BaseTextFillWidth">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

