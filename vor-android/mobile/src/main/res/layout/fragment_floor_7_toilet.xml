<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.Floor7Fragment"
    tools:ignore="IncludeLayoutParam"
    style="@style/toiletTableLayout">

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/toilet7AM"
            style="@style/toiletSquareLeft">

            <ImageView
                android:id="@+id/toilet7AMixedImageView"
                android:src="@drawable/ic_wc_white_48px"
                style="@style/toiletGenderImageView"/>

            <include
                layout="@layout/toilet_a_label"
                android:layout_above="@id/toilet7AMixedImageView"
                style="@style/toiletLabelImageView"/>
        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/toilet7BM"
            style="@style/toiletSquareLeft">

            <ImageView
                android:id="@+id/toilet7BMixedImageView"
                android:src="@drawable/ic_wc_white_48px"
                style="@style/toiletGenderImageView"/>

            <include
                layout="@layout/toilet_b_label"
                android:layout_above="@id/toilet7BMixedImageView"
                style="@style/toiletLabelImageView"/>
        </RelativeLayout>

    </TableRow>

</TableLayout>
