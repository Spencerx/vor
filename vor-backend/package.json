{
  "name": "futu_2-backend-server",
  "version": "0.0.1",
  "description": "Backend for handling communication between clients and sensors",
  "main": "futu_2-backend-server",
  "engines": {
    "node": "4.1.1"
  },
  "scripts": {
    "server": "NODE_PATH=. node --harmony_destructuring --harmony_modules --harmony_array_includes ./bin/www.js",
    "mocha": "NODE_PATH=. NODE_ENV=test PORT=9090 mocha --harmony_destructuring --harmony_modules --harmony_array_includes tests/*.js",
    "jscs": "jscs app",
    "eslint": "eslint app",
    "lint": "npm run jscs && npm run eslint",
    "test": "NODE_PATH=. PORT=9090 npm run mocha || exit 0",
    "test-watch": "nodemon -x 'npm run lint && npm run test'",
    "watch": "nodemon  -x 'npm run lint && npm run server'"
  },
  "keywords": [
    "IoT",
    "indoor location"
  ],
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.0.5",
    "body-parser": "^1.14.1",
    "bootstrap": "^3.3.5",
    "debug": "^2.2.0",
    "ejs": "^2.3.4",
    "eslint": "^1.10.1",
    "express": "^4.13.3",
    "express-redis-cache": "^0.1.9",
    "jscs": "^2.6.0",
    "morgan": "^1.6.1",
    "nodemon": "^1.8.1",
    "redis": "^2.4.2",
    "rx": "^4.0.7",
    "serve-favicon": "^2.3.0",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "babel-core": "5.8.23",
    "envs": "^0.1.6",
    "mocha": "^2.3.4",
    "redis-mock": "^0.5.0",
    "should": "^7.1.1",
    "sinon": "^1.17.2",
    "socket.io-client": "^1.3.7"
  }
}
